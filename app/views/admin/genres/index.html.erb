<h3>ジャンル一覧・追加</h1>
<%= form_with model: @genre, url: admin_genres_path, local: true, method: :post do |f| %>
  <div class="">
    <%= f.label :genre, "ジャンル"%>
    <%= f.text_field :name, class:""  %>
  <span><%= f.submit "追加" ,class: "btn btn-info" %></span>
  </div>
  <% end %>

<table class="table">
  <thead>
    <tr class="active">
      <th>ジャンル</th>
      <th></th>
    </tr>
  </thead>
  <tbody class="">
   <% @genres.each do |genre| %>
   <tr>
     <td><%= genre.name %></td>
     <td>
       <%= link_to "編集する",edit_admin_genre_path(genre),class: "btn btn-primary btn-sm" %>
     </td>
   </tr>
   <% end %>
  </tbody>
</table>                 