<h3 class="text-center">会員一覧</h3>
<div class="row">
  <div class="table-responsive">
    <table class="table table-bordered table-hover">
      <thead>
        <tr class="active">
          <th class="text-center">ID</th>
          <th class="text-center">写真</th>
          <th class="text-center">氏名</th>
          <th class="text-center">メールアドレス</th>
          <th class="text-center">会員ステータス</th>
        </tr>
      </thead>
      <tbody>
        <% @users.each do |user| %>
          <tr>
            <td class="text-center">
              <%= user.id %>
            </td>
            <td class="text-center">
              <%= link_to admin_user_path(user) do %>
                <%= attachment_image_tag user, :image, size: '50x50', fallback: 'no-image.png', class: 'img-thumbnail img-responsive img-hover' %>
              <% end %>
            <td class="text-center">
              <%= user.name %>
            </td>
            <td class="text-center">
              <%= user.email %>
            </td>
            <td class="text-center">
              <%= user.is_deleted %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
  <%= link_to "CSVエクスポート", admin_users_path(format: :csv), class: "btn btn-success" %>
  <br>
  <br>

      <%= form_tag import_admin_users_path, multipart: true do %>
      <%= file_field_tag :file %>
      <%= submit_tag "インポート", class: "btn btn-info" %>
      <% end %>

</div>


