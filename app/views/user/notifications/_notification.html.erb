<div class="table-responsive">
  <table class="table">
    <tbody>
      <tr>
        <td>
          <% visitor = notification.visitor %>
          <% visited = notification.visited %>
          <%= link_to user_room_path(notification.message.room) do %>
            <%= attachment_image_tag visitor, :image, size: '50x50', fallback: 'no-image.png', class: 'img-thumbnail img-responsive img-hover' %>
            <span>
              <%= visitor.name %>さんが
            </span>
            <%= "あなたにメッセージを送信しました" %>
          <% end %>
          <%= notification.created_at.to_s(:datetime_jp) %>
        </td>
      </tr>
    </tbody>
  </table>
</div>



