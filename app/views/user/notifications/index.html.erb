<div class="row">
  <div classZ="col-xs-3">
  </div>

  <div class="col-xs-6">
    <%= link_to "通知削除", user_notification_path(@notifications), method: :delete, data: { confirm: '本当に削除しますか？' } ,class: "fas fa-trash" %>
    <br>
    <br>
    <% notifications = @notifications.where.not(visitor_id: current_user.id) %>
    <% if notifications.exists? %>
      <%= render notifications %>
    <% else %>
      <div class="text-left">
        <p>通知はありません</p>
      </div>
    <% end %>
  </div>
</div>

<div class="col-xs-3">
</div>