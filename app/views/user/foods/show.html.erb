<h2>レビュー詳細</h2>

<h3><%= @food.name %></h3>

<% if user_signed_in? %>

  <table class="table table-bordered">
    <tbody>
      <tr>
        <td>イメージ写真</td>
        <td></td>
        <%= link_to user_user_path(@food.user) do %>
        <%= @food.user.name %></td>
        <% end %>
      </tr>
      <tr>
        <td>サウナ飯名</td>
        <td><%= @food.name %></td>
      </tr>
      <tr>
        <td>紹介文・感想</td>
        <td><%= @food.introduction %></td>
      </tr>
      <tr>
        <td>電話番号</td>
        <td><%= @food.tel %></td>
      </tr>
      <tr>
        <td>ホームページ</td>
        <td><%= @food.home_page %></td>
      </tr>
    </tbody>
  </table>


  <% if @food.user == current_user %> 
  <%= link_to "編集", edit_user_sauna_food_path(@food), class: "btn btn-primary" %>
  <%= link_to "削除", user_sauna_food_path(@food), method: :delete, data: { confirm: "本当に削除しますか？" }, class: "btn btn-danger" %>
  <% end %>


<% end %>
