<div class="container">
  <div class="card card-container">
    <h3 class="text-center"><%= @food.name %>詳細</h3>
    <% if user_signed_in? %>
    <%= attachment_image_tag @food, :image, size: "200x200",fallback: 'no-image.png', onClick: "$('.img_field').click()", class:
      'center-block img-thumbnail img-responsive img_prev'%>
      <div class="table-responsive table-sauna">
        <table class="table table-bordered">
          <tbody>

            <tr>
              <th class="active">サウナ飯名</th>
              <td><%= @food.name %></td>
            </tr>

            <tr>
              <th class="active">紹介文・感想</th>
              <td><%= @food.introduction %></td>
            </tr>

            <tr>
              <th class="active">電話番号</th>
              <td><%= @food.tel %></td>
            </tr>

            <tr>
              <th class="active">ホームページ</th>
              <td><%= @food.home_page %></td>
            </tr>
          </tbody>
        </table>
      </div>
      <%= link_to "フード飯一覧へ", user_sauna_foods_path(@food.sauna), class: "btn btn-info" %>
      <% if @food.user == current_user %>
        <%= link_to "編集", edit_user_sauna_food_path(@food), class: "btn btn-primary" %>
        <%= link_to "削除", user_sauna_food_path(@food), method: :delete, data: { confirm: "本当に削除しますか？" }, class: "btn btn-danger" %>
      <% end %>
    <% end %>
  </div>
</div>