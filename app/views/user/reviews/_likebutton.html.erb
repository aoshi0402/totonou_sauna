<% if review.liked_by?(current_user) %>
  <%= link_to user_sauna_review_likes_path(review.sauna, review), method: :delete, remote: true do %>
    <i class="fa fa-heart" aria-hidden="true" style="color: red;"></i><%= review.likes.size %>
  <% end %>
<% else %>
  <%= link_to user_sauna_review_likes_path(review.sauna, review), method: :post, remote: true do %>
    <i class="far fa-heart" aria-hidden="true"></i><%= review.likes.size %>
  <% end %>
<% end %>