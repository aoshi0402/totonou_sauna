<dive class="row">
  <div class="col-xs-3">
  </div>

  <div class="col-xs-6">
    <%= form_with model: @comment, url: user_sauna_review_comment_path(@comment.review.sauna,@comment.review,@comment), local: true do |f| %>

    <%= f.label :title, 'タイトル'%>
    <%= f.text_field :title, class: "form-control"%>

    <%= f.label :body, "本文" %>

    <%= f.text_area :body, class: "form-control", style: "height: 100px;"%>

    <%= f.submit "保存", class: "btn btn-primary btn-block" %>

    <% end %>
  </div>

  <div class="col-xs-3">
  </div>
</dive>