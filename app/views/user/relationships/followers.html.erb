<% if @users.exists? %>
  <div class="table-responsive">
    <table class='table'>
      <tbody>
        <% @users.each do |user| %>
          <tr>
            <td><%= user.name %></td>
            <td>フォロー数: <%= user.followings.count %></td>
            <td>フォロワー数: <%= user.followers.count %></td>
            <td><%= link_to 'Show', user_user_path(user), class: "user_#{user.id}" %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
<% else %>
    <p class="text-center">ユーザーはいません</p>
<% end %>
