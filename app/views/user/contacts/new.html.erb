<div class="container">
  <div class="card card-container">
    <h4 class="text-center">お問い合わせ情報入力</h4>
    <%= form_with model: @contact, url: user_contacts_path, local: true do |f| %>
    <%= render 'layouts/error_messages', model: f.object %>
      <div class="newform">
        <%= f.label :name, "氏名"%>
        <span>
          <%= f.text_field :name, autofocus: true, placeholder: "例) 阿部 太郎", autocomplete: "name", class: "form-control"%>
        </span>
      </div>
      <div class="newform">
        <%= f.label :email, "メールアドレス"%>
        <span>
          <%= f.text_field :email, placeholder: "例) ddddd@gmail.com", autocomplete: "email", class: "form-control"%>
        </span>
      </div>
      <div class="newform">
        <%= f.label :title, "件名"%>
        <span>
          <%= f.text_field :title, placeholder: "例) サウナの新規登録に関して", autofocus: true, autocomplete: "postcode", class: "form-control"%>
        </span>
      </div>
      <div class="newform">
        <%= f.label :body, "本文"%>
        <span>
          <%= f.text_area :body, placeholder: "例) ここの文間違えていないでしょうか？ご確認のほどよろしくお願いいたします。", autofocus: true, autocomplete: "postcode", class: "form-control"%>
        </span>
      </div>
      <div class="newform">
        <%= f.submit "送信", class: "btn btn-success btn-lg btn-block" %>
      </div>
    <% end %>
  </div>
</div>