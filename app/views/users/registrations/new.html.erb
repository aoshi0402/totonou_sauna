<div class="container">
  <div class="card card-container">
    <img id="profile-img" class="profile-img-card" src="//ssl.gstatic.com/accounts/ui/avatar_2x.png" />
      <h4 class="text-center">会員情報入力</h4>
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render 'layouts/error_messages', model: f.object %>
        <div class="newform">
          <%= f.label :name, "氏名"%>
          <span>
            <%= f.text_field :name, autofocus: true, placeholder: "例) 阿部 優", autocomplete: "name", class: "form-control"%>
          </span>
        </div>
        <div class="newform">
          <%= f.label :sex, "性別"%>
          <span>
            <%= f.select :sex, User.sexes.keys, { prompt: '選択してください' }, class: "form-control"%>
          </span>
        </div>
        <div class="newform">
          <%= f.label :introduction, "自己紹介文"%>
          <span>
            <%= f.text_area :introduction, placeholder: "例) 好きなサウナはかるまるです。", autocomplete: "introduction", class: "form-control"%>
          </span>
        </div>
        <div class="newform">
          <%= f.label :postcode, "郵便番号"%>
          <span>
            <%= f.text_field :postcode, placeholder: "例) 222-8910", autofocus: true, autocomplete: "postcode", class: "form-control"%>
          </span>
        </div>
        <div class="newform">
          <%= f.label :prefecture_code, "都道府県"%>
          <span>
            <%= f.collection_select :prefecture_code, JpPrefecture::Prefecture.all, :code, :name, { prompt: "選択してください" }, class: "form-control" %>
          </span>
        </div>
        <div class="newform">
          <%= f.label :address_city, "市区町村"%>
          <span>
            <%= f.text_field :address_city, placeholder: "例) 品川区", autocomplete: "address_city", class: "form-control"%>
          </span>
        </div>
        <div class="newform">
          <%= f.label :address_street, "番地"%>
          <span>
            <%= f.text_field :address_street, placeholder: "例) 西五反田2-3-4", autocomplete: "address_street", class: "form-control"%>
          </span>
        </div>
        <div class="newform">
          <%= f.label :address_building, "建物"%>
          <span>
            <%= f.text_field :address_building, placeholder: "例) ライオンズマンション 5号", autocomplete: "address_building", class: "form-control"%>
          </span>
        </div>
        <div class="newform">
          <%= f.label :email, "メールアドレス"%>
          <span>
            <%= f.email_field :email, placeholder: "例) azx@abc", autocomplete: "email", class: "form-control"%>
          </span>
        </div>
        <div class="newform">
        <%= f.label :password, "パスワード"%>
          <span>
            <%= f.password_field :password, placeholder: "6文字以上", autocomplete: "new-password", class: "form-control"%>
          </span>
        </div>
        <div class="newform">
          <%= f.label :password_confirmation, "パスワード(再確認)"%>
          <span>
            <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control"%>
          </span>
        </div>
        <div class="newform">
          <%= flash[:recaptcha_error] %>
          <%= recaptcha_tags %>
        </div>
        <div class="newform">
          <%= f.submit "新規会員登録", class: "btn btn-success btn-lg btn-block" %>
        </div>
      <% end %>
  </div>
</div>